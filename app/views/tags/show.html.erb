<div class="page-header">
  <h3>Tag #<%= @tag.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @tag.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/tags" class="btn btn-default">
        Back
      </a>
      <a href="/tags/<%= @tag.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_tag/<%= @tag.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<h2>Cards</h2>
<ul>
  <% @cards.each do |card| %>
  <li>
    <%= card.title %>
  </li>
  <% end %>
  
</ul>

<h2>Boards</h2>
<ul>
  <% @boards.each do |board| %>
  <li>
    <%= board.title %>
  </li>
  <% end %>
  
</ul>